    "wp:lang:build": "wp i18n make-pot . ./languages/wp-reminder.pot --domain='wp-reminder' --include='./dist/js,./plugin'",
    "wp:lang:json": "wp i18n make-json ./languages"
  },
  "devDependencies": {
