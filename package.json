    "draft-js-export-html": "^1.4.1",
    "font-awesome": "^4.7.0",
    "formik": "^2.2.6",
    "moment": "^2.29.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-toastify": "^7.0.3",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3"
  }
