{
  "name": "remind-me",
  "version": "0.1.0",
  "description": "WP Plugin for reminder handling",
  "main": "index.js",
  "author": "CodeLeaf <development@code-leaf.de>",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "start": "webpack --mode development --watch --progress",
    "build": "webpack --mode production",
    "doc:show": "docsify serve ./docs",
    "zip": "./.scripts/build_zip",
    "up": "docker-compose up -d",
    "down": "docker-compose down",
    "php:analyse": "./vendor/bin/phpstan analyse --memory-limit=-1 -c phpstan.neon",
    "php:test": "phpunit",
    "wp:lang:build": "cp ./languages/remind-me.pot ./languages/remind-me.backup.pot && wp i18n make-pot . ./languages/remind-me.pot --domain='remind-me' --debug --exclude='tests'",
    "wp:lang:json": "wp i18n make-json ./languages --no-purge"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/moment": "^2.13.0",
    "@types/quill": "^2.0.6",
    "@types/react-copy-to-clipboard": "^5.0.0",
    "@types/react-day-picker": "^5.3.0",
    "@types/wordpress__block-editor": "^6.0.3",
    "@types/yup": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^3.2.0",
    "@wordpress/env": "^4.1.0",
    "@wordpress/scripts": "^17.0.0",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.27.5",
    "browser-sync-webpack-plugin": "^2.3.0",
    "css-loader": "^5.2.0",
    "esbuild-loader": "^2.13.1",
    "eslint": "^7.26.0",
    "eslint-plugin-react": "^7.23.2",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^1.4.1",
    "path-browserify": "^1.0.1",
    "sass-loader": "^11.0.1",
    "snowpack": "^3.8.6",
    "style-loader": "^2.0.0",
    "svelte": "^3.42.2",
    "svelte-check": "^2.2.4",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.7.4",
    "svg-url-loader": "^7.1.1",
    "terser-webpack-plugin": "^5.1.4",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.28.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@wordpress/i18n": "^3.19.1",
    "ajv": "^7.2.4",
    "dayjs": "^1.10.5",
    "font-awesome": "^4.7.0",
    "formik": "^2.2.8",
    "quill": "^1.3.7",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.3",
    "react-day-picker": "^7.4.10",
    "react-dom": "^17.0.2",
    "react-quill": "^1.3.5",
    "react-toastify": "^7.0.3",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3",
    "yup": "^0.32.9"
  }
}
