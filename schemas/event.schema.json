{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 40
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "clocking": {
      "type": "integer"
    },
    "start": {
      "type": "string",
      "format": "date"
    }
  },
  "required": ["name", "description", "clocking", "start"],
  "additionalProperties": false
}